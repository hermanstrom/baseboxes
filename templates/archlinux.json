        "atlas_token": null,
        "atlas_name_32": "Arch Linux 2017.02.01",
        "atlas_name_64": "Arch Linux 2017.03.01",
        "atlas_short_description": "Arch Linux",
        "atlas_username": null,
        "atlas_version": "{{isotime \"2006\"}}.{{isotime \"01\"}}.{{isotime \"02\"}}",
        "headless": "true",
        "iso_sha256sum_32": "4d9d67b1a20a3b44b0dd38679400971a68d5bd9f96608bd13a677d84b8a7ece5",
        "iso_sha256sum_64": "4133a852f0b753133c600ebc4f0e1b393e6810cee7a8766a1c239a6dac9b7095",
        "iso_url_32": "http://mirrors.kernel.org/archlinux/iso/2017.02.01/archlinux-2017.02.01-dual.iso",
        "iso_url_64": "http://mirrors.kernel.org/archlinux/iso/2017.03.01/archlinux-2017.03.01-dual.iso",
        "parallels_tools_version": null
